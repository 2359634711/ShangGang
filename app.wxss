/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background: #f5f5f5;
  font-size: 28rpx;
  padding-bottom: 120rpx;
}

image {
  width: 100%;
  height: 100%;
}

.hoverThemeColor {
  background: rgba(151, 63, 43, 0.767);
}

.hoverWhiteColor {
  background: #f5f5f5;
}

button{
  background-color: rgba(151, 63, 43, 0);
  border-radius:0;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  line-height: 28rpx;
}
.button-hover{
  background: rgba(0, 0, 0, 0)
}
button::after {
  border: none;
}

.btnSpecialBlock {
  margin: 56rpx 31rpx;
  width: auto;
  background: #fff;
  height: 88rpx;
  background: #973f2b;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 0px 20rpx 0px rgba(153, 153, 153, 0.1);
}