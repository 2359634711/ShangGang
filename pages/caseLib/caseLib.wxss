/* pages/caseLib/caseLib.wxss */

.navTitle {
  position: fixed;
  top: 0;
  background: #fff;
  padding-top: 33rpx;
  width: 100%;
}
.mainBox{
  margin-top: 85rpx;
}
.caseTitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.caseItem {
  background: #fff;
  margin-top: 20rpx;
  padding: 10rpx 25rpx;
}

.userImg {
  width: 52rpx;
  height: 52rpx;
  overflow: hidden;
  border-radius: 100%;
  margin-right: 10rpx;
}

.titleLeft {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.titleRight {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}

.caseImgBox {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.imgItem {
  width: 336rpx;
  height: 336rpx;
  border-radius: 10rpx;
  background: #ccc;
  overflow: hidden;
}

.caseContent {
  display: flex;
  flex-direction: column;
  padding: 27rpx 0;
}

.caseInfo {
  margin-top: 27rpx;
  font-size: 24rpx;
  color: rgba(204, 204, 204, 1);
}
.caseItemHoverBack{
  background: #f5f5f5;
}

image{
  overflow: hidden;
}