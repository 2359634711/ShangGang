.btnItem {
  width: 157rpx;
  height: 54rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(151, 63, 43, 1);
  border-radius: 100rpx;
  text-align: center;
  line-height: 54rpx;
  color: #973f2b;
}

.btnItem:last-child {
  margin: 0 20rpx;
}

/* orderItem End */

.cancel {
  border-color: #999;
  color: #999;
}

.name {
  padding-bottom: 35rpx;
  padding-top: 25rpx;
}

.rich {
  color: #999;
}
