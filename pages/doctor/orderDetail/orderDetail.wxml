<!--pages/doctor/doctorDetail/doctorDetail.wxml-->
<theme-view>
  <view class='topBox'>
    <image mode='widthFix' class='backImg' src='/res/icon/doc-det-bg@3x.png'></image>
    <view class='backBox'></view>


    <view class='userBox'>
      <view class='avatar'>
        <image src=''></image>
      </view>
      <view class='userInfo'>
        <view class='statusBox'>status[doc_status]</view>
        <view class='doctorName'>李贤慧</view>
        <view class='doctorinfo'>
          已服务
          <view class='numBox'>185648</view>
          人
        </view>
      </view>
    </view>
  </view>




  <view class='infoItem'>
    <view class='infoTitle'>
      <view class='titleLeft'></view>
      <view class='titleRight'>服务说明</view>
    </view>

    <view class='content'>中西医结合治疗银屑病、黄褐斑、白癜风、脱发、痤疮、皮炎 湿疹、荨麻疹。对病毒性疾病中西医结合治疗银屑病、黄褐斑、 白癜风、脱发、痤疮、皮炎湿疹、荨麻疹。对病毒性疾病有着 多年治疗研发经验中西医结合治疗银屑病、黄褐斑、白癜风、 发、痤疮、皮炎湿疹、荨麻疹。对病毒性疾病
    </view>
  </view>






  <!-- navBottom 底部-->
  <view class='navBottom'>
    <view class='navBtn'>
      <view class='navLeft'>
        合计：
      </view>
      <view class='navRight'>
        <view class=''>12</view>
      </view>
      <view class='navPop'>抵扣15</view>
    </view>


    <view class='navBtn' bindtap='showDialog'>
      <view class='navLeft'>
        <view class='icon'>
          <image src='/res/icon/{{type==0 ?"doc-icon-img@3x": "doc-icon-video@3x"}}.png'></image>
        </view>
        <view>{{typeText[type]}}</view>
      </view>
      <view class='navMiddle'></view>
      <view class='navRight'>立即支付</view>
    </view>

  </view>
  <!-- navBottom 底部 End-->

  <dialog wx:if='{{dialogShowFlag}}' bindonAction='onDialogAction'>
    <view class='title'>填写个人信息</view>
    <form>
      <view class='input'>
        <view class='inputTitle'>姓名</view>
        <view class='inputValue'>
          <input type='text' placeholder='请填写真实姓名'></input>
        </view>
      </view>
      <view class='input'>
        <view class='inputTitle'>性别</view>
        <view class='inputValue'>
        </view>
      </view>
      <view class='input'>
        <view class='inputTitle'>年龄</view>
        <view class='inputValue'>
          <input type='text' placeholder='请填写年龄'></input>
        </view>
      </view>

      <view class='info'>为保证医患沟通完善，请完善个人真实信息</view>



      <button class='subBtn' bindtap='payBtnClick'>提交并支付</button>
    </form>
  </dialog>
</theme-view>