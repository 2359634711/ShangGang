/* pages/user/user.wxss */

.topBox {
  width: 100%;
  height: 425rpx;
  position: relative;
  z-index: 0;
}

.backBox {
  height: 100%;
  width: 100%;
}

.userBox {
  position: absolute;
  top: 57rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.userLeft {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.userName {
  font-size: 42rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(28, 28, 28, 1);
}

.userMoney {
  display: flex;
  flex-direction: row;
  color: #973f2b;
}

.userMoney view {
  font-weight: bold;
}

.userRight {
  margin-right: 24rpx;
}

.userImg {
  width: 116rpx;
  height: 116rpx;
  border: 1px solid #ccc;
}

.joinBar {
  position: absolute;
  background: #1c1c1c;
  width: auto;
  left: 24rpx;
  right: 24rpx;
  top: 221rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 27rpx;
  align-items: center;
  height: 78rpx;
  border-radius: 12rpx 12rpx 2rpx 2rpx;
}

.joinLeft {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight: 800;
  color: rgba(241, 210, 165, 1);
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.btnItem .icon{
  width: 45rpx;
  height: 45rpx;
}


.joinBar .icon{
  margin-right: 11rpx;
}

.joinBtn {
  width: 132rpx;
  height: 46rpx;
  background: linear-gradient(90deg, rgba(251, 240, 219, 1), rgba(241, 214, 155, 1));
  border: 1rpx solid rgba(249, 241, 219, 0.91);
  box-shadow: 0px 2rpx 4rpx 0px rgba(191, 126, 60, 0.29);
  border-radius: 23rpx;
  font-weight: bold;
  text-align: center;
  line-height: 46rpx;
  font-size: 22rpx;
}

.mainBox {
  border-radius: 30rpx 30rpx 0px 0px;
  width: 100%;
  overflow: hidden;
  margin-top: -130rpx;
  z-index: 1;
}

.mainItem {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 40rpx 0 30rpx 0;
}

.mainTitle {
  margin: 0 0 40rpx 23rpx;
}

.btnItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 165rpx;
}
.btnList{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.title {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}
